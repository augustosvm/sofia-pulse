{
  "name": "sofia-finance-intelligence",
  "version": "1.0.0",
  "description": "Sofia Finance Intelligence Hub - Investment signal generation and market data collection",
  "main": "index.js",
  "scripts": {
    "demo": "tsx scripts/demo-signals.ts",
    "migrate:market": "cd dbt && dbt run --select tag:market_data",
    "collect:brazil": "tsx scripts/collect-brazil-stocks.ts",
    "collect:nasdaq": "tsx scripts/collect-nasdaq-momentum.ts",
    "collect:funding": "tsx scripts/collect-funding-rounds.ts",
    "collect:all": "npm run collect:brazil && npm run collect:nasdaq && npm run collect:funding",
    "collect:free": "npm run collect:brazil",
    "signals": "tsx scripts/generate-signals.ts",
    "invest:full": "npm run collect:all && npm run signals",
    "invest:quick": "npm run collect:free && npm run signals",
    "dev": "tsx watch scripts/demo-signals.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "keywords": [
    "finance",
    "investment",
    "signals",
    "market-data",
    "sofia",
    "b3",
    "nasdaq",
    "ai"
  ],
  "author": "Sofia Intelligence Hub",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
